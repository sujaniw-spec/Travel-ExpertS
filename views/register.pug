extends layout


block content
  style.
      .container-fluid {
      background-color: #b2bdbd;
      }
      fieldset {
      background-color: #D2D3D2;
      width: 520px;
      height: 490px;
      align-items: center;
      border: 2px;
      border-color: turquoise;
      }
      legend {
      background-color: rgb(195 203 210);
      color: rgb(90, 88, 88);
      padding: 5px 10px;
      }
      input {
      margin: 5px;
      width: 240px;
      }
      label {
      margin: 5px;
      width: 100x;
      }
      .fontclass {
      color: #167ad6;
      font-family: Georgia, Serif;
      }
      input[type=submit] {
      background-color: #387fe9;
      color: white;
      padding: 5px 12px;
      border: none;
      cursor: pointer;
      }
      input[type=submit] :hover {
      background-color: #bb85ee;
      }
      input[type=reset] {
      background-color: #387fe9;
      color: white;
      padding: 5px 12px;
      border: none;
      cursor: pointer;
      }
      input[type=reset] :hover {
      background-color: #bb85ee;
      }
      .navbar {
      padding-top: 0px;
      padding-bottom: 0px;
      background-color: #b2bdbd !important;
      }


  
  header
    a(href=imgPath)
      img(src=imgPath alt='TravellExpert Logo' width='200' style='float:right;padding-right: 20px;padding-right: inherit;width:200px;height:200px;')
  br
  br
  //form#f1(name='register' method='post' action='reguser' onsubmit='return validateForm()')
  form#f1(name='register' method='post' action='/post/create' onsubmit='return validateForm()')  

    center
      br
      br
      br
      br
      br
      br
      br
      br
      if errors
            ul
              each error in errors
                if error == "Your Email address already exists. Please Login"
                  li.alert.alert-danger.m3 #{error} 
                  a(href="/")  Login                  
          
                else 
                  li.alert.alert-danger.m3= error

      section(style='align-items: center;')
        br
        br
        br
        br
        fieldset#myFieldSet
          legend.fontclass(style='color:white') Register your account

          
  

          table.fontclass(border='0')
            tr
              td(style='width: 30px;')
                label First Name*:
              td
                input#txtFirstName(type='text' name='firstname')
                span#nameDescription
                span#blankMsgName(style='color:red')  
            tr
              td(style='width: 30px;')
                label Last Name*:
              td
                input#txtLastName(type='text' name='lastname')
                span#lNameDescription
                span#blankMsgLName(style='color:red')  
            tr
              td(style='width: 30px;')
                label Password*:
              td
                input#txtPassword(type='password' name='password')
                span#pNameDescription
                span#blankMsgPName(style='color:red')  
            tr
              td(style='width: 30px;')
                label Confirm Password*:
              td
                input#txtConfirmPassword(type='password' name='confirmpassword')
                span#blankMsgPConfirmName(style='color:red')  
                span#pConfirmNameDescription(style='color:red')  
            tr
              td(style='width: 30px;')
                label Email Address*:
              td
                input#txtEmail(type='text' required='true' name='email')
                span#blankMsgEmail(style='color:red')  
                span#EmailDescription(style='color:red')  
            tr
              td(style='width: 30px;')
                label Address:
              td
                input#txtAddress(type='text' name='address')
            tr
              td(style='width: 30px;')
                label City:
              td
                input#txtCity(type='text' name='city')
            tr
              td(style='width: 30px;')
                label Province:
              td
                input#txtProvince(type='text' name='province')
            tr
              td(style='width: 30px;')
                label PostalCode:
              td
                input#txtPostalCode(type='text' name='postalcode')
                span#blankMsgPostal(style='color:red')  
                span#postalDescription(style='color:red')  
            tr
              td(style='width: 30px;')
                label Country:
              td
                input#txtCountry(type='text' name='country')  
            tr
              td(style='width: 30px;')
                label HomePhone:
              td
                input#txtHomePhone(type='text' name='homephone')  
            tr
              td(style='width: 30px;')
                label Business Phone:
              td
                input#txtBusPhone(type='text' name='businessphone')    
            //- tr
            //-   td(style='width: 30px;')
            //-     label Agent ID:
            //-   td
            //-     input#txtAgentId(type='text' name='agentid')        
        
            tr
              td
                input(type='submit' name='butSubmit' value='SUMBIT' onclick="return confirm('Do you want to submit the form?')")
              td
                input(type='reset' name='butReset' value='RESET' onclick="return confirm('Do you want to reset the form?')")
  div(style='clear: both;')
  br
  br

  
