extends layout

block content
  h2 Create a new post

  form(method='POST' action='/post/create')
    .form-floating.m-3
      label.form-label(for='exampleFormControlInput1') Title
      input#exampleFormControlInput1.form-control(type='text' placeholder='Title' name='posttitle')
    .form-floating.m-3
      textarea#floatingTextarea.form-control(placeholder='Leave a comment here' name='postbody')
      label(for='floatingTextarea') Body
    .form-floating.m-3
      input#posturlid.form-control(placeholder='Post slug' name='posturl' disabled)
      label(for='posturlid') Post URL
      
    button.btn.btn-primary.m-3(type='submit') Submit

  if errors
    ul
      each error in errors
        li.alert.alert-danger.m3= error
