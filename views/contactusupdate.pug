-var v =0  
if agentcalgary 
 each agent in agentcalgary 
    -v = v+1
    
    form#f1form(name='f' action='/contact/contactupdate/' method='post')
        .form-row
        .form-group
            FirstName(for='AgtFirstName') FirstName
            input#AgtFirstName.form-control(type='text' placeholder='AgtFirstName' name=AgtFirstName value=agent.AgtFirstName)
        .form-group
            label(for='AgtLastName') Last Name
            input#AgtLastName.form-control(type='text' placeholder='lastname' name=AgtLastName value=agent.AgtLastName)
        .form-group
            label(for='AgtMiddleInitial') Middle Initials
            input#AgtMiddleInitial.form-control(type='text' placeholder='Initials' name=AgtMiddleInitial value=agent.AgtMiddleInitial)
        .form-group
            label(for='AgtBusPhone') Business Phone
            input#AgtBusPhone.form-control(type='text' placeholder='Phone' name=AgtBusPhone value=agent.AgtBusPhone)
        .form-group
        
            label(for='AgtEmail') Email
            input#AgtEmail.form-control(type='text' name=AgtEmail value=agent.AgtEmail)
        .form-group
            
            label(for='AgtPosition') Agent Position
            select#AgtPosition.form-control
                if agent.AgtPosition.toString() == 'Senior Agent'
                    option(value=agent.AgtPosition selected=(agent.AgtPosition.toString()== 'Senior Agent'? 'selected' : false)) Senior Agent
                
                    option(value='Junior Agent') Junior Agent
                    
                    option(value='Intermediate Agent') Intermediate Agent  
                if agent.AgtPosition.toString() == 'Intermediate Agent'
                    option(value=agent.AgtPosition selected=(agent.AgtPosition.toString()== 'Intermediate Agent'? 'selected' : false)) Intermediate Agent
                
                    option(value='Junior Agent') Junior Agent
                    
                    option(value='Senior Agent') Senior Agent  
                if agent.AgtPosition.toString() == 'Junior Agent'
                    option(value=agent.AgtPosition selected=(agent.AgtPosition.toString()== 'Junior Agent'? 'selected' : false)) Junior Agent
                
                    option(value='Intermediate Agent') Intermediate Agent
                    
                    option(value='Senior Agent') Senior Agent  
        
        

                            
                
        .form-group
        .form-check
        
            
        if  agent.AgencyId == 1
            
            input#AgencyId.form-check-input(type='radio' name='AgencyId'+v value=1 checked)
            label.form-check-label(for='AgencyId')
                | Calgary Head Office
                
            .form-check
            input#AgencyId.form-check-input(type='radio' name='AgencyId'+v value=2)
            label.form-check-label(for='AgencyId')
                | Okotas Office
        if  agent.AgencyId == 2
            input#AgencyId.form-check-input(type='radio' name='AgencyId'+v value=1 )
            label.form-check-label(for='AgencyId')
                | Calgary Head Office
            .form-check
            input#AgencyId.form-check-input(type='radio' name='AgencyId'+v value=2 checked)
            label.form-check-label(for='AgencyId')
                | Okotas Office


        button.btn.btn-primary(type='submit') Update Contact
